@using PROJET_1.Models
@{ 
    ViewBag.Title = "gallerie";
    Layout = "~/Views/Shared/_EvenementLayoutPage.cshtml"; }
@model IEnumerable<PROJET_1.Models.Activite>
@{ 
    var i = 0;
    IEnumerable<gallerie> gal = ViewData["gallerie"] as IEnumerable<gallerie>;
    var id = (int)ViewData["id"];            
 }
<!------ Include the above in your HEAD tag ---------->
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" media="screen">
<script src="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.js"></script>
<div class="banner-wrapper bg-light">
    <div id="index_banner" class="banner-vertical-center-index container-fluid pt-5">

        <!-- Start slider -->
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            
            <div class="carousel-inner">
                @foreach (Activite e in Model)
                {
                    if (i == 0)
                    {
    <div class="carousel-item active">

        <div class="py-5 row d-flex align-items-center">
            <div class="banner-content col-lg-8 col-8 offset-2 m-lg-auto text-left py-5 pb-5">
                <h1 class="banner-heading h1 text-secondary display-3 mb-0 pb-5 mx-0 px-0 light-300 typo-space-line">
                    @e.titre
                </h1>
                <p class="banner-body text-muted py-3 mx-0 px-0">
                    @e.description
                </p>
                <a class="banner-button btn rounded-pill btn-outline-primary btn-lg px-4" href="/Evenement/activitie/@e.id" role="button">Voir plus</a>
            </div>
        </div>

    </div> i++;
                    }
                    else
                    {
    <div class="carousel-item">

        <div class="py-5 row d-flex align-items-center">
            <div class="banner-content col-lg-8 col-8 offset-2 m-lg-auto text-left py-5 pb-5">
                <h1 class="banner-heading h1 text-secondary display-3 mb-0 pb-5 mx-0 px-0 light-300 typo-space-line">
                    @e.titre
                </h1>
                <p class="banner-body text-muted py-3 mx-0 px-0">
                    @e.description
                </p>
                <a class="banner-button btn rounded-pill btn-outline-primary btn-lg px-4" href="/Evenement/activitie/@e.id" role="button">Voir plus</a>
            </div>
        </div>

    </div>}

                }
            </div>
            <a class="carousel-control-prev text-decoration-none" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                <i class='bx bx-chevron-left'></i>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next text-decoration-none" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                <i class='bx bx-chevron-right'></i>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
        <!-- End slider -->

    </div>
</div>
<!-- Page Content -->
<!-- Start About Section -->
<section class="about text-center " style="background-color: white;padding-top: 50px; padding-bottom: 50px; ">
    <div class="container">
        <h1 class="custom-heading"><span>Les évenements de </span> ENSA's</h1>
        <p class="lead">@ViewData["titre"]</p>
        <div class="container page-top">
            <div class="row ">
                @foreach (gallerie e in gal)
                {
                    if (e.id_activite == id)
                    {
                        if (e.type.Equals("image"))
                        {
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a href="@e.path" class="fancybox" rel="ligthbox">
            <img src="@e.path" class="zoom img-fluid " alt="">
        </a>
    </div> }
                        if (e.type.Equals("video"))
                        {
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a href="@e.path" class="fancybox" rel="ligthbox">
            <video src="@e.path" controls class="zoom img-fluid " alt=""></video>
        </a>
    </div>}

                    }
                }
            </div>
        </div>
    </div>
</section>
<!-- End About Section -->
