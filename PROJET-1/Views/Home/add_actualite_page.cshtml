
@{
    ViewBag.Title = "add_actualite_page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Ajouter une nouvelle actualite</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form method="post" action="Add_actualite" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="event">Titre de l'actualite</label>
                    <input type="text" name="titre" class="form-control" id="event" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label for="inputDescription">Description</label>
                    <textarea id="inputDescription" name="description" class="form-control" rows="4" placeholder="Enter Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Piece joint</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="path" class="custom-file-input" id="exampleInputFile">
                            <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text" id="">Upload</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Date</label>
                    <div class="input-group">
                        <input type="date" name="event_date" id="start">
                    </div>
                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </form>
    </div>
</div>

